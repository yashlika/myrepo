pipeline {
    agent any 
    stages {
        stage('pull') { 
            steps {
                 git 'https://github.com/yashlika/studentapp-ui.git'
            }
        }
        stage('build') { 
            steps {
                 sh 'mvn clean package'
            }
        }
        stage('test') { 
            steps { withSonarQubeEnv ('sonar') {
                sh 'mvn sonar:sonar'
                } 
            }
        }
        stage('QualityCheck') { 
            steps {
                timeout(5) {
        waitForQualityGate true
                }
            }
        }
        stage('Deploy') { 
            steps {
                 echo 'Deploy successful'
            }
        }
    }
}

